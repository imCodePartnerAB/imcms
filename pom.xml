<!--
	Tomcat plugin: http://tomcat.apache.org/maven-plugin-2

		Default credentials (username/password) for plugin goals are admin/<empty>

		Add the following line to your $CATALINA_BASE/conf/tomcat-users.xml

		<user username="admin" password="" roles="manager-gui, manager-script, admin-gui, admin-script" />
-->

<!--
	Please note that there is additional resources dir - resources-conf.
	Resources from that dir are copied by ant script into ${project.basedir}/target/imcms/WEB-INF/conf dir.
-->

<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.imcode.imcms</groupId>
    <artifactId>imcms</artifactId>
    <version>6.0.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>imCMS</name>

    <url>http://imcode.com</url>
    <description>Open Source CMS</description>
    <organization>
        <name>imCode Partner AB</name>
        <url>http://imcode.com</url>
    </organization>

    <prerequisites>
        <maven>3.0.4</maven>
    </prerequisites>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <maven.compiler.fork>true</maven.compiler.fork>
        <maven.compiler.compilerVersion>1.8</maven.compiler.compilerVersion>
        <maven.compiler.meminitial>512m</maven.compiler.meminitial>
        <maven.compiler.maxmem>1024m</maven.compiler.maxmem>

        <maven.compiler.debug>true</maven.compiler.debug>
        <maven.compiler.optimize>false</maven.compiler.optimize>
        <maven.compiler.showDeprecation>true</maven.compiler.showDeprecation>
        <maven.compiler.showWarnings>true</maven.compiler.showWarnings>
        <javac.args/>

        <build.webapp.dir>${project.build.directory}/${project.artifactId}</build.webapp.dir>

        <solr.version>4.10.2</solr.version>
        <slf4j.version>1.7.25</slf4j.version>
        <springframework.version>4.3.13.RELEASE</springframework.version>

        <!--
            Core & EntityManager version
        -->
        <hibernate.version>4.3.11.Final</hibernate.version>

        <tomcat.version>7.0.57</tomcat.version>

        <!--
            tomcat7:run goal property.
            The web resources directory for the web application being run.
            Default value is: ${project.basedir}/src/main/webapp
        -->
        <tomcat.warSourceDirectory>${build.webapp.dir}</tomcat.warSourceDirectory>

        <!--
            tomcat7:run goal property.
            will add /WEB-INF/lib/*.jar and /WEB-INF/classes from war dependencies in the webappclassloader
            Default value is: true.
            User property is: maven.tomcat.addWarDependenciesInClassloader.
        -->
        <addWarDependenciesInClassloader>false</addWarDependenciesInClassloader>

        <!--
            tomcat7:run goal property.
            The port to run the Tomcat server on. Will be exposed as System props and session.executionProperties with
            key tomcat.maven.http.port
            Default value is: 8080.
        -->
        <maven.tomcat.port>8080</maven.tomcat.port>

        <!--
            tomcat6:exploded goal property.
            Whether Tomcat should automatically undeploy webapps that already exist when deploying.
            Default value is: false.
        -->
        <maven.tomcat.update>true</maven.tomcat.update>

        <!--
            Jetty plugin and jsp compiler plugin version.
        -->
        <jetty.version>9.2.1.v20140609</jetty.version>
        <jetty.port>9090</jetty.port>
        <jetty.stop.key>${project.name}</jetty.stop.key>
        <jetty.stop.port>9696</jetty.stop.port>
        <jetty.scanIntervalSeconds>0</jetty.scanIntervalSeconds>
        <jetty.contextPath>/${project.artifactId}</jetty.contextPath>

        <log4j.threshold>info</log4j.threshold>
        <log4j.hibernate.level>error</log4j.hibernate.level>
        <log4j.console-appender.threshold>off</log4j.console-appender.threshold>
    </properties>

    <profiles>
        <profile>
            <id>log4j:console</id>
            <properties>
                <log4j.console-appender.threshold>all</log4j.console-appender.threshold>
            </properties>
        </profile>

        <profile>
            <id>log4j:trace</id>
            <properties>
                <log4j.hibernate.level>all</log4j.hibernate.level>
                <log4j.threshold>all</log4j.threshold>
            </properties>
        </profile>

        <profile>
            <id>log4j:info</id>
            <properties>
                <log4j.hibernate.level>info</log4j.hibernate.level>
                <log4j.threshold>info</log4j.threshold>
            </properties>
        </profile>

        <profile>
            <id>log4j:debug</id>
            <properties>
                <log4j.hibernate.level>debug</log4j.hibernate.level>
                <log4j.threshold>debug</log4j.threshold>

                <javac.args>-Xlint</javac.args>
            </properties>
        </profile>

        <profile>
            <id>Xlint:all</id>
            <properties>
                <javac.args>-Xlint:all</javac.args>
            </properties>
        </profile>

        <!--Minify css/js profile-->
        <profile>
            <id>yuicompressor:compress</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>net.alchim31.maven</groupId>
                        <artifactId>yuicompressor-maven-plugin</artifactId>
                        <version>1.5.1</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>compress</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <nosuffix>true</nosuffix>
                            <jswarn>false</jswarn>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>yuicompressor:compress-no-min</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>net.alchim31.maven</groupId>
                        <artifactId>yuicompressor-maven-plugin</artifactId>
                        <version>1.5.1</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>compress</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <excludes>
                                <!-- do not minify in this profile for dev purposes -->
                                <exclude>**/*.*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>

