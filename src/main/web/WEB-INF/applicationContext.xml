<?xml version="1.0" encoding="UTF-8"?>
<!--default-lazy-init="true"-->
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:p="http://www.springframework.org/schema/p"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:aop="http://www.springframework.org/schema/aop"
        xmlns:tx="http://www.springframework.org/schema/tx"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <import resource="./configContext.xml"/>
    <import resource="./beansContext.xml"/>

    <context:annotation-config/>
    <context:component-scan base-package="com.imcode.imcms.addon.imagearchive"/>
    <context:property-placeholder location="/WEB-INF/conf/server.properties" system-properties-mode="NEVER" ignore-resource-not-found="true"/>
    <!--ignore-unresolvable="true"-->

    <tx:annotation-driven transaction-manager="txManager" proxy-target-class="true"/>

    <bean id="txManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
        <property name="defaultLocale" value="sv"/>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>/WEB-INF/locale/imcms</value>
                <value>/WEB-INF/locale/image_archive</value>
            </list>
        </property>
        <property name="fallbackToSystemLocale" value="false"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
    </bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close"
          p:driverClassName="${JdbcDriver}"
          p:url="${JdbcUrl}"
          p:username="${User}"
          p:password="${Password}"
          p:testOnBorrow="true"
          p:validationQuery="select 1"
          p:defaultAutoCommit="false"
          p:maxActive="${MaxConnectionCount}"/>

    <!--
        Legacy code support:
        Imcms.getApiDataSource returns DataSource with autocommit;
        com.imcode.db.DataSourceDatabase requires DataSource with autocommit;
    -->
    <bean id="dataSourceWithAutoCommit" parent="dataSource"
          p:defaultAutoCommit="true"/>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean"
          p:configLocation="classpath:hibernate.cfg.xml"
          p:dataSource-ref="dataSource"/>

    <bean id="dao" abstract="true" class="com.imcode.imcms.dao.HibernateSupport"
          p:sessionFactory-ref="sessionFactory"/>

    <bean id="imageDao" class="com.imcode.imcms.dao.ImageDao" parent="dao"
          p:languageDao-ref="languageDao" p:sessionFactory-ref="sessionFactory"/>

    <bean id="textDao" class="com.imcode.imcms.dao.TextDao" parent="dao"/>

    <bean id="menuDao" class="com.imcode.imcms.dao.MenuDao" parent="dao"/>

    <bean id="contentLoopDao" class="com.imcode.imcms.dao.ContentLoopDao" parent="dao"/>

    <bean id="metaDao" class="com.imcode.imcms.dao.MetaDao" parent="dao"/>

    <bean id="documentVersionDao" class="com.imcode.imcms.dao.DocumentVersionDao" parent="dao"/>

    <bean id="languageDao" class="com.imcode.imcms.dao.LanguageDao" parent="dao"/>

    <bean id="categoryMapper" class="com.imcode.imcms.mapping.CategoryMapper" parent="dao"/>

    <bean id="ipAccessDao" class="com.imcode.imcms.dao.IPAccessDao" parent="dao"/>

    <bean id="nativeQueriesDao" class="com.imcode.imcms.dao.NativeQueriesDao" parent="dao"/>

    <bean id="systemDao" class="com.imcode.imcms.dao.SystemDao" parent="dao"/>

    <bean id="imageCacheMapper" class="com.imcode.imcms.mapping.ImageCacheMapper"/>

    <bean id="documentSaver" class="com.imcode.imcms.mapping.DocumentSaver"
          p:metaDao-ref="metaDao"
          p:contentLoopDao-ref="contentLoopDao"
          p:documentVersionDao-ref="documentVersionDao"
          p:textDao-ref="textDao"
          p:imageDao-ref="imageDao"
          p:menuDao-ref="menuDao"/>


    <bean id="textDocumentInitializer" class="com.imcode.imcms.mapping.TextDocumentInitializer"
          p:metaDao-ref="metaDao"
          p:textDao-ref="textDao"
          p:imageDao-ref="imageDao"
          p:menuDao-ref="menuDao"
          p:contentLoopDao-ref="contentLoopDao"/>


    <bean id="documentLoader" class="com.imcode.imcms.mapping.DocumentLoader"
          p:metaDao-ref="metaDao"
          p:documentVersionDao-ref="documentVersionDao"
          p:documentInitializingVisitor-ref="documentInitializingVisitor"/>


    <bean id="documentInitializingVisitor" class="com.imcode.imcms.mapping.DocumentInitializingVisitor"
          p:metaDao-ref="metaDao"
          p:textDocumentInitializer-ref="textDocumentInitializer"/>

</beans>