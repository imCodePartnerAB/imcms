<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>

  <!-- ==================================================================== -->
  <!-- Menus -->
  <!-- ==================================================================== -->
  <!-- List -->
  <query name="Menu.getMenusByDocRef">
    <![CDATA[
    SELECT m FROM Menu m WHERE m.docRef = :docRef
    ]]>
  </query>

  <!-- Unique -->
  <query name="Menu.getMenuByDocRefAndNo">
    <![CDATA[
    SELECT m FROM Menu m WHERE m.docRef = :docRef AND m.no = :no
    ]]>
  </query>

</hibernate-mapping>