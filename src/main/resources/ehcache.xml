<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true" monitoring="autodetect" dynamicConfig="true">

    <diskStore path="auto/default/path"/>
    <defaultCache
            maxEntriesLocalHeap="10000"
            eternal="false"
            timeToIdleSeconds="6000"
            timeToLiveSeconds="3000"
            maxEntriesLocalDisk="10000000"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </defaultCache>
    <cache name="StaticContentCachingFilter"
           maxEntriesLocalHeap="2000"
           eternal="true"
           timeToIdleSeconds="31556926"
           timeToLiveSeconds="31556926">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="OtherContentCachingFilter"
           maxEntriesLocalHeap="2000"
           eternal="false"
           timeToIdleSeconds="2629744"
           timeToLiveSeconds="2629744">
        <persistence strategy="localTempSwap"/>
    </cache>
</ehcache>
